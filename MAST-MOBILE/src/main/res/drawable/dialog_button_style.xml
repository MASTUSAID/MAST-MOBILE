<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/color_select" />
      <stroke
          android:width="1dp"
          android:color="@color/color_primary_dark" />

      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
  <item>
    <shape>
		<solid
          android:color="@color/white" />
      <stroke
          android:width="3dp"
          android:color="@color/color_primary_dark" />

      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>